{% macro card(params) %}

  <div class="card{{ ' ' + params.classes if params.classes else '' }}">

    <div class="card__image">

      <a href="{{ params.url }}" tabindex="-1">
        <picture>
          <source type="image/webp" srcset="{{ params.image.src }}.webp, {{ params.image.src }}@2x.webp 2x">
          <source type="image/png" srcset="{{ params.image.src }}.png, {{ params.image.src }}@2x.png 2x">
          <img src="{{ params.image.src }}.png" height="392" width="588" alt="" loading="lazy">
        </picture>
      </a>

    </div>

    <div class="card__content">

      <div class="text-component">
        <h3>{{ params.title }}</h3>
        <p class="color-contrast-medium">{{ params.description }}</p>
        <p>
          <a class="link link--icon" href="{{ params.url }}" aria-label="View {{ params.title }} project">
            View project
            <svg class="icon icon--sm margin-left-xxxxs" height="24" width="24" viewBox="0 0 24 24" focusable="false" aria-hidden="true">
              <path d="M3.71 11.02h13.17L14 8.14a.996.996 0 111.41-1.41L20 11.32c.39.39.39 1.02 0 1.41l-4.59 4.59A.996.996 0 1114 15.91l2.88-2.89H3.71c-.55 0-1-.45-1-1s.45-1 1-1z"></path>
            </svg>
          </a>
        </p>
      </div>

    </div>

  </div>

{% endmacro %}