{% macro entryDetails(params) %}
  <dl class="entry-details{%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
    {% for row in params.rows %}
    {% if row %}
    <div class="entry-details__item{%- if row.classes %} {{ row.classes }}{% endif %}">
      <dt class="entry-details__title{%- if row.key.classes %} {{ row.key.classes }}{% endif %}">{{ row.key.html | safe if row.key.html else row.key.text }}</dt>
      <dd class="entry-details__description{%- if row.value.classes %} {{ row.value.classes }}{% endif %}">{{ row.value.html | safe if row.value.html else row.value.text }}</dd>
    </div>
    {% endif %}
  {% endfor %}
  </dl>
{% endmacro %}