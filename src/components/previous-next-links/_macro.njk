{% macro previousNextLinks(params) %}
  <ul class="pn-links grid{%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>

    {% for previousNextLinksItem in params.previousNextLinksItems %}
    <li class="pn-links__item col-6@md">

      <a class="pn-links__link justify-center justify-between@md" href="{{ previousNextLinksItem.url }}" rel="{{ previousNextLinksItem.rel }}">

        {% if previousNextLinksItem.rel === 'prev' %}
        <svg class="pn-links__icon icon icon--md margin-right-sm" viewBox="0 0 24 24" role="presentation" focusable="false" aria-hidden="true">
          <path d="M20.29 12.02c0 .55-.45 1-1 1H6.12L9 15.91a.996.996 0 11-1.41 1.41L3 12.73a.996.996 0 010-1.41l4.59-4.59A.996.996 0 119 8.14l-2.88 2.88h13.17c.55 0 1 .45 1 1z"/>
        </svg>
        {% endif %}

        <i class="sr-only">{{ previousNextLinksItem.text }}: </i>{{ previousNextLinksItem.label }}

        {% if previousNextLinksItem.rel === 'next' %}
        <svg class="pn-links__icon icon icon--md margin-left-sm" viewBox="0 0 24 24" role="presentation" focusable="false" aria-hidden="true">
          <path d="M3.71 11.02h13.17L14 8.14a.996.996 0 111.41-1.41L20 11.32c.39.39.39 1.02 0 1.41l-4.59 4.59A.996.996 0 1114 15.91l2.88-2.89H3.71c-.55 0-1-.45-1-1s.45-1 1-1z"/>
        </svg>
        {% endif %}

      </a>

    </li>
    {% endfor %}

  </ul>
{% endmacro %}