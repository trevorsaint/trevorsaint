{%- from "../macros/back-link.njk" import backLink -%}
{%- from "../macros/picture.njk" import picture -%}
{%- from "../macros/entry-details.njk" import entryDetails -%}
{%- from "../macros/previous-next-links.njk" import previousNextLinks -%}
{%- from "../macros/social-sharing.njk" import socialShare -%}
{%- from "../macros/card.njk" import card -%}
{%- from "../macros/quote.njk" import quote -%}
{%- from "../macros/logos.njk" import logo -%}
{%- from "../macros/icons.njk" import icon -%}
<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{pageTitle}}</title>

    {# Disable telephone number styling in iOS #}
    <meta name="format-detection" content="telephone=no">

    {# Add home screen for Safari on iOS #}
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="{{serviceName}}">

    {# Search Engine #}
    <meta name="description" content="{{pageDescription}}">

    {# Open Graph #}
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{rootPath}}{{pageUrl}}">
    <meta property="og:title" content="{{pageTitle}}">
    <meta property="og:image" content="{{rootPath}}images/opengraph.png">
    <meta property="og:description" content="{{pageDescription}}">
    <meta property="og:site_name" content="{{serviceName}}">
    <meta property="og:locale" content="en_GB">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">

    {# Twitter #}
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@trevorsaint">
    <meta name="twitter:creator" content="trevorsaint">
    <meta name="twitter:url" content="{{rootPath}}{{pageUrl}}">
    <meta name="twitter:title" content="{{pageTitle}}">
    <meta name="twitter:description" content="{{pageDescription}}">
    <meta name="twitter:image" content="{{rootPath}}images/twitter.png">

    {# Androidâ€™s Chrome browser #}
    <meta name="theme-color" content="#F24B88">

    {# Favicon #}
    <link rel="icon" href="{{rootPath}}images/favicon.svg">

    {# Mask icon (Safari) #}
    <link rel="mask-icon" href="{{rootPath}}images/mask-icon.svg" color="#F24B88">

    {# Apple touch icon #}
    <link rel="apple-touch-icon" href="{{rootPath}}images/apple-touch-icon.png">

    {# Manifest #}
    <link href="{{rootPath}}manifest.json" rel="manifest">

    {# Font preloading #}
    <link rel="preload" as="font" type="font/woff2" href="{{rootPath}}fonts/Baskerville.woff2" crossorigin="anonymous">
    <link rel="preload" as="font" type="font/woff2" href="{{rootPath}}fonts/Moderat-Bold.woff2" crossorigin="anonymous">
    <link rel="preload" as="font" type="font/woff2" href="{{rootPath}}fonts/Moderat-Regular.woff2" crossorigin="anonymous">

    {# Stylesheet #}
    <link href="{{rootPath}}stylesheets/main.min.css" rel="stylesheet">

    {# Progressive enhancement #}
    <script>document.getElementsByTagName('html')[0].className += 'js';</script>

    {# Google reCaptcha #}
    {% if pageId == 'contact' %}
    <script src="https://www.google.com/recaptcha/api.js?render=6Lf33JcaAAAAAN5oC8LMQjEKbH4Nl-jn55bbk-3o"></script>

    <script>
      grecaptcha.ready(function () {
        grecaptcha.execute('6Lf33JcaAAAAAN5oC8LMQjEKbH4Nl-jn55bbk-3o', {action: 'submit'}).then(function (token) {
          console.info("got token: " + token);
          document.getElementById('g-recaptcha-response').value = token;
        });
      });
    </script>
    {% endif %}

    {# Google Analytics #}
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-9LSR2MP5CZ"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-9LSR2MP5CZ');
    </script>

  </head>
  <body>

  <div class="page">

  {% include "header.njk" %}

  <main class="content" id="content">
    {% block content %}{% endblock %}
  </main>

  {% include "footer.njk" %}

  </div>

  {% include "scripts.njk" %}

  </body>
</html>