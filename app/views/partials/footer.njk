<footer class="footer">

  <div class="footer__container container padding-y-md padding-y-lg@sm padding-y-xxl@md padding-y-xxxxl@lg">

    <div class="footer__content">

      <div class="flex@lg items-start justify-between">

        <div class="padding-bottom-xs padding-bottom-lg@md padding-bottom-xxl@lg padding-bottom-xxxxl@xl max-width-sm">
          {% if pageId == 'contact' %}
            <h2 class="text-xl">Do you have a project in mind? Call <span class="sr-only">Trevor Saint</span> <a class="link" href="tel:+447783809087" rel="nofollow">07783 809 087</a></h2>
          {% else %}
            <h2 class="text-xl">Do you have a project in mind? <a class="link" href="{{rootPath}}contact">Contact me</a></h2>
          {% endif %}
        </div>

        <div class="padding-bottom-xs margin-top-xxxs">

          <ul class="social-share flex flex-wrap gap-xxs">

            <li class="social-share__item">
              <a class="social-share__link js-tooltip-trigger" href="https://github.com/trevorsaint" rel="nofollow external" title="Github">
                {{
                  icon({
                    "icon": 'github',
                    "iconSize": 'md'
                  })
                }}
                <span class="sr-only">Follow Trevor Saint on Github</span>
              </a>
            </li>

            <li class="social-share__item">
              <a class="social-share__link js-tooltip-trigger" href="https://pinterest.co.uk/trevorsaint" rel="nofollow external" title="Pinterest">
                {{
                  icon({
                    "icon": 'pinterest',
                    "iconSize": 'md'
                  })
                }}
                <span class="sr-only">Follow Trevor Saint on Pinterest</span>
              </a>
            </li>

            <li class="social-share__item">
              <a class="social-share__link js-tooltip-trigger" href="https://twitter.com/trevorsaint" rel="nofollow external" title="Twitter">
                {{
                  icon({
                    "icon": 'twitter',
                    "iconSize": 'md'
                  })
                }}
                <span class="sr-only">Follow Trevor Saint on Twitter</span>
              </a>
            </li>

            <li class="social-share__item">
              <a class="social-share__link js-tooltip-trigger" href="https://linkedin.com/in/trevorsaint" rel="nofollow external" title="LinkedIn">
                {{
                  icon({
                    "icon": 'linkedin',
                    "iconSize": 'md'
                  })
                }}
                <span class="sr-only">Follow Trevor Saint on LinkedIn</span>
              </a>
            </li>

            <li class="social-share__item">
              <a class="social-share__link js-tooltip-trigger" href="https://instagram.com/trevorsaint" rel="nofollow external" title="Instagram">
                {{
                  icon({
                    "icon": 'instagram',
                    "iconSize": 'md'
                  })
                }}
                <span class="sr-only">Follow Trevor Saint on Instagram</span>
              </a>
            </li>

          </ul>

        </div>

      </div>

      <div class="flex@md items-center justify-between">

        <ul class="menu-list margin-bottom-xs margin-bottom-0@md">
          <li class="menu-list__item"><a class="menu-list__link" href="{{rootPath}}"{% if pageId == 'home' %} aria-current="true"{% endif %}>Home</a></li>
          <li class="menu-list__item"><a class="menu-list__link" href="{{rootPath}}about"{% if pageId == 'about' %} aria-current="true"{% endif %}>About</a></li>
          <li class="menu-list__item"><a class="menu-list__link" href="{{rootPath}}projects"{% if pageId == 'projects' %} aria-current="true"{% endif %}>Projects</a></li>
          <li class="menu-list__item"><a class="menu-list__link" href="{{rootPath}}testimonials"{% if pageId == 'testimonials' %} aria-current="true"{% endif %}>Testimonials</a></li>
          <li class="menu-list__item"><a class="menu-list__link" href="{{rootPath}}contact"{% if pageId == 'contact' %} aria-current="true"{% endif %}>Contact</a></li>
        </ul>

        <ul class="legal-list">
          <li class="legal-list__item"><a class="link-text" href="{{rootPath}}sitemap"{% if pageId == 'sitemap' %} aria-current="true"{% endif %}>Sitemap</a></li>
          <li class="legal-list__item"><a class="link-text" href="{{rootPath}}accessibility"{% if pageId == 'accessibility' %} aria-current="true"{% endif %}>Accessibility</a></li>
          <li class="legal-list__item color-contrast-medium">&copy;2022 All rights reserved</li>
        </ul>

      </div>

